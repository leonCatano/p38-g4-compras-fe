<template>
  <div class="transaction_delete">
    <div class="container_transaction_delete">
      <h2>Transaction registration</h2>

      <form v-on:submit.prevent="processCreateTransaction">
        <input
          type="number"
          v-model="transaction.transaction_value"
          placeholder="Transaction value"
        />
        <br />

        <input
          type="text"
          v-model="transaction.store_name"
          placeholder="Store's name"
        />
        <br />
        <input
          type="number"
          v-model="transaction.id_credit_card"
          placeholder="Id credit card"
        />
        <br />

        <button type="submit">Send transaction</button>
      </form>
    </div>
  </div>
</template>

<script>
import jwt_decode from "jwt-decode";
import axios from "axios";

export default {
  name: "createTransaction",
  data: function () {
    return {
      transaction: {
        transaction_date: new Date().toJSON().toString(),
        transaction_status: "E",
        transaction_value: 0,
        store_name: "",
        id_credit_card: 0,
      },
    };
  },

  methods: {
    processCreateTransaction: function () {

      let token = localStorage.getItem("token_access");
      let userId = jwt_decode(token).user_id.toString();

      axios
        .post(
          `https://p37-g4-be-compra-tg.herokuapp.com/transaction/${userId}`,
          this.transaction,
          {
            headers: { Authorization: `Bearer ${token}` },
          }
        )
        .then((result) => {
          alert("Succesful transaction"); 
          this.$emit("loadProfile");
        })
        .catch((error) => {
          this.$emit("logOut");
          console.log("Error en el axios");
        });
    },
  },
};
</script>

<style>
.transaction_delete {
  margin: 0;
  padding: 0%;
  height: 100%;
  width: 100%;

  display: flex;
  justify-content: center;
  align-items: center;
}

